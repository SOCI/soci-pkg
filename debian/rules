#!/usr/bin/make -f
#export DH_VERBOSE=1

LDFLAGS += -Wl,--as-needed
DEB_HOST_MULTIARCH ?= $(shell dpkg-architecture -qDEB_HOST_MULTIARCH)

%:
	dh $@ --parallel --sourcedirectory=src

override_dh_auto_configure:
	dh_auto_configure -- -DLIBDIR=/usr/lib/$(DEB_HOST_MULTIARCH) -DWITH_ORACLE=off -DSOCI_MYSQL_DO_NOT_TEST=TRUE -DSOCI_POSTGRESQL_DO_NOT_TEST=TRUE -DSOCI_ODBC_DO_NOT_TEST=TRUE

override_dh_auto_test:
	dh_auto_test --max-parallel=1

